model Addon {
  id          String      @id @default(uuid()) @db.UniqueIdentifier
  name        String?
  price       Float?
  unit        String?
  status      String?     @default("active")
  stock       Int?        @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  cartItemAddons CartItemAddon[]
  orderItems  OrderItem[]
}